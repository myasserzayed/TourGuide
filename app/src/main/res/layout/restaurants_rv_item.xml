<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/wide_cardView_totalHeight"
    android:background="@color/fragments_bg_color">

    <androidx.cardview.widget.CardView
        android:id="@+id/rest_cards"
        android:layout_width="match_parent"
        android:layout_height="@dimen/wide_cardView_height"
        android:layout_marginStart="@dimen/wide_cardView_marginStart"
        android:layout_marginLeft="@dimen/wide_cardView_marginStart"
        android:layout_marginTop="@dimen/wide_cardView_marginTop"
        android:layout_marginEnd="@dimen/wide_cardView_marginEnd"
        android:layout_marginRight="@dimen/wide_cardView_marginEnd"
        app:cardBackgroundColor="@color/wide_cardView_bg_color"
        app:cardCornerRadius="@dimen/wide_cardView_corners"
        app:cardElevation="@dimen/wide_cardView_elevation"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/img_rest"
            android:layout_width="@dimen/wide_cardView_img_width"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/prince" />

        <TextView
            android:id="@+id/text_rest"
            android:layout_width="@dimen/wide_cardView_txt_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|right"
            android:layout_marginTop="@dimen/wide_cardView_txt_Top"
            android:layout_marginEnd="@dimen/wide_cardView_txt_End"
            android:layout_marginRight="@dimen/wide_cardView_txt_End"
            android:fontFamily="serif"
            android:text="@string/name"
            android:textAlignment="center"
            android:textColor="@color/wide_cardView_txt_color"
            android:textSize="@dimen/wide_cardView_details_txtSize"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/address_rest"
            android:layout_width="@dimen/wide_cardView_txt_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|right|bottom"
            android:layout_marginEnd="@dimen/wide_cardView_txt_End"
            android:layout_marginRight="@dimen/wide_cardView_txt_End"
            android:layout_marginBottom="@dimen/wide_cardView_txt_Bottom"
            android:fontFamily="serif"
            android:text="@string/details"
            android:textAlignment="center"
            android:textColor="@color/wide_cardView_txt_color"
            android:textSize="@dimen/wide_cardView_details_txtSize" />

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>